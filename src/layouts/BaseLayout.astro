---
import "../styles/global.css";
import "@fontsource/inter/300.css";
import "@fontsource/inter/400.css";
import "@fontsource/inter/500.css";
import "@fontsource/inter/700.css";
import "@fontsource-variable/newsreader";
import Lightbox from "../components/Lightbox.astro";

interface Props {
    title: string;
    description?: string;
}

const {
    title,
    description = "Astrophotography portfolio and blog by Vantage Point Astro",
} = Astro.props;
const canonicalURL = Astro.site
    ? new URL(Astro.url.pathname, Astro.site)
    : null;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        <title>{title}</title>
        <meta name="description" content={description} />
        {canonicalURL && <link rel="canonical" href={canonicalURL} />}

        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        {canonicalURL && <meta property="og:url" content={canonicalURL} />}
        <meta property="og:site_name" content="Vantage Point Astro" />
        <meta property="og:type" content="website" />

        <!-- RSS Feed -->
        <link rel="alternate" type="application/rss+xml" title="Vista & Void Blog" href="/rss.xml" />
    </head>
    <body
        class="min-h-screen font-sans"
        style="background-color: var(--color-bg-main); color: var(--color-text-main);"
    >
        <header>
            <nav class="container mx-auto px-6 py-6">
                <div class="flex items-center justify-between">
                    <a
                        href="/"
                        class="text-xl font-serif font-medium hover:opacity-70 transition-opacity"
                    >
                        Vantage Point Astro
                    </a>
                    <ul class="flex gap-8 text-sm font-serif">
                        <li>
                            <a
                                href="/"
                                class="hover:underline hover:underline-offset-2 transition-all"
                                >Home</a
                            >
                        </li>
                        <li>
                            <a
                                href="/portfolio"
                                class="hover:underline hover:underline-offset-2 transition-all"
                                >Gallery</a
                            >
                        </li>
                        <li>
                            <a
                                href="/blog"
                                class="hover:underline hover:underline-offset-2 transition-all"
                                >Blog</a
                            >
                        </li>
                        <li>
                            <a
                                href="/about"
                                class="hover:underline hover:underline-offset-2 transition-all"
                                >About</a
                            >
                        </li>
                        <li>
                            <a
                                href="/rss.xml"
                                class="hover:underline hover:underline-offset-2 transition-all flex items-center gap-1"
                                title="RSS Feed"
                            >
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                    <circle cx="6.18" cy="17.82" r="2.18"/>
                                    <path d="M4 4.44v2.83c7.03 0 12.73 5.7 12.73 12.73h2.83c0-8.59-6.97-15.56-15.56-15.56zm0 5.66v2.83c3.9 0 7.07 3.17 7.07 7.07h2.83c0-5.47-4.43-9.9-9.9-9.9z"/>
                                </svg>
                                RSS
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>

        <main class="container mx-auto px-6 py-12">
            <slot />
        </main>

        <footer class="mt-24">
            <div class="container mx-auto px-6 py-8">
                <div class="flex flex-col items-center gap-4">
                    <p class="text-sm opacity-70 text-center">
                        Â© {new Date().getFullYear()} Malcolm Loro, Tony Jarrett, Richard
                        Taylor, Dan Cardamore. All rights reserved.
                    </p>
                </div>
            </div>
        </footer>

        <Lightbox />
    </body>
</html>
